<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/navbar.ejs')%>

<body>

    <div class="container">
        <hr>
        <h2>Categorias</h2>

        <a class="btn btn-success" href="/admin/categories/new">Cadastrar Categoria</a>
        <br><br>    
        <table class="table table-dark table-hover">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Titulo</th>
                <th scope="col">Slug</th>
                <th scope="col">Ações</th>
              </tr>
            </thead>
            <tbody>
                <% categories.forEach(category =>{%>
                    <tr>
                        <td><%= category.id %></td>
                        <td><%= category.title %></td>
                        <td><%= category.slug %></td>
                        <td>
                        <form method="post" action="/admin/categories/delete" onsubmit="confirmarDelecao(event, this)">
                            <input type="hidden" name="id" value="<%=category.id%>"/>
                            <a href="/admin/categories/edit/<%= category.id %>"class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                        </td>
                      </tr>
                <%}) %>
            </tbody>
          </table>
    </div>

</body>
<%- include ('../../partials/footer.ejs')%>
<script>
    function confirmarDelecao(event, form){
      event.preventDefault();
      var decision = confirm("Deseja deletar esta categoria?");
      if(decision){
          form.submit();
      }else{

      }
    }
</script>