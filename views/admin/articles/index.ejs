<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/navbar.ejs')%>

<body>

    <div class="container">
        <hr>
        <h2>Artigos</h2>

        <a class="btn btn-success" href="/admin/articles/new">Cadastrar Artigo</a>
        <br><br>    
        <table class="table table-dark table-hover">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Titulo</th>
                <th scope="col">Slug</th>
                <th scope="col">Categoria</th>
                <th scope="col">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% articles.forEach(article=>{%>
                <tr>
                  <td scope="col"><%= article.id%></td>
                  <td scope="col"><%= article.title%></td>
                  <td scope="col"><%= article.slug%></td>
                  <td scope="col"><%= article.category.title%></td>
                  <td>
                    <form method="post" action="/articles/delete" onsubmit="confirmarDelecao(event, this)">
                        <input type="hidden" name="id" value="<%=article.id%>"/>
                        <a href="/articles/edit/<%= article.id %>"class="btn btn-warning">Editar</a>
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                    </td>
                </tr>
              <%})%>
            </tbody>
          </table>
    </div>

</body>
<%- include ('../../partials/footer.ejs')%>
<script>
  function confirmarDelecao(event, form){
    event.preventDefault();
    var decision = confirm("Deseja deletar este artigo?");
    if(decision){
        form.submit();
    }else{

    }
  }
</script>