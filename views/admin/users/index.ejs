<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<body>

    <div class="container">
        <hr>
        <h2>Usuarios</h2>

        <a class="btn btn-success" href="/admin/users/create">Cadastrar Usuario</a>
        <br><br>    
        <table class="table table-dark table-hover">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">email</th>
              </tr>
            </thead>
            <tbody>
                <% users.forEach(user =>{%>
                    <tr>
                        <td><%=user.id%></td>
                        <td><%=user.email%></td>
                    </tr>
                <%}) %>
            </tbody>
          </table>
    </div>

</body>

